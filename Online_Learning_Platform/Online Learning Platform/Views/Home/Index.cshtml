<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tracks - Online Learning Platform</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .card-body {
            text-align: center;
            padding: 20px;
        }

        .card-img-top {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.25rem;
            margin: 10px 0;
            font-weight: bold;
        }

        .card-text {
            color: #555;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.2s, border-color 0.2s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        nav {
            background-color: #1c3b8c;
            color: white;
        }

        .container {
            margin-top: 20px;
        }

        .roadmap {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .roadmap h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .roadmap ul {
                list-style-type: none;
                padding: 0;
            }

            .roadmap li {
                margin: 10px 0;
                padding: 10px;
                background: #007bff;
                color: white;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .roadmap li:hover {
                    background: #0056b3;
                }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            @foreach (var track in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@track.ImageUrl" class="card-img-top" alt="@track.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@track.Name</h5>
                            <p class="card-text">@track.Description</p>
                            <a href="@Url.Action("ViewCourses", "Track", new { trackId = track.TrackId })"
                               class="btn btn-primary">View Courses</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Roadmap Section -->
        <div class="roadmap mt-5">
            <h2>Roadmap for Frontend and Backend Tracks</h2>
            <div class="row">
                <div class="col-md-6">
                    <h4>Frontend Track</h4>
                    <ul>
                        <li>Learn HTML & CSS</li>
                        <li>Understand JavaScript Basics</li>
                        <li>Explore Responsive Design with Bootstrap</li>
                        <li>Dive into React.js</li>
                        <li>Learn State Management with Redux</li>
                        <li>Get Familiar with RESTful APIs</li>
                        <li>Build Projects and Create Portfolio</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4>Backend Track</h4>
                    <ul>
                        <li>Learn C# Fundamentals</li>
                        <li>Understand ASP.NET Core MVC</li>
                        <li>Explore Entity Framework Core</li>
                        <li>Get Familiar with RESTful APIs</li>
                        <li>Learn Authentication and Authorization</li>
                        <li>Implement Unit Testing</li>
                        <li>Deploy Applications to Cloud</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Instructors Section -->
      <div class="mt-5">
            <h2 class="text-center">Our Instructors</h2>
            <div class="row">
                @foreach (var instructor in ViewData["Instructors"] as IEnumerable<Online_Learning_Platform.Models.Instructor>)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <img src="@instructor.Image" class="card-img-top" alt="@instructor.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@instructor.Name</h5>
                                <p class="card-text">Expert in @instructor.Tracks.Name</p>
                                <a href="@Url.Action("InstructorProfile", "Home", new { id = instructor.InstructorId })"
                                   class="btn btn-primary">View Profile</a>


                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>


        
        <!-- Contact Us Section -->
        <div class="container mt-5">
            <div class="contact-us-section" style="background-color: #e9ecef; padding: 30px; border-radius: 15px; margin-top: 30px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 600px; margin-left: auto; margin-right: auto;">
                <h2 class="text-center" style="color: #0056b3;">Contact Us</h2>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label" style="text-align: left;">Name</label>
                        <input type="text" class="form-control form-control-sm" id="name" placeholder="Your Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label" style="text-align: left;">Email</label>

                        <input type="email" class="form-control form-control-sm" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label" style="text-align: left;">Message</label>
                        <textarea class="form-control form-control-sm" id="message" rows="3" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
