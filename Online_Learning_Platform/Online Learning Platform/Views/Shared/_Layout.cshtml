<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_Learning_Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="./images/2.png" type="image/x-icon" />

    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Roboto', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #007bff;
            border-bottom: 3px solid #0056b3;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .navbar .container {
                max-width: 1200px;
                padding: 0 15px;
            }

        .navbar-brand img {
            height: 70px;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            font-weight: 500;
            color: white !important;
            margin-left: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700 !important;
                text-decoration: underline;
            }

        .container {
            flex: 1;
            margin-top: 30px;
        }

        .landing-section {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #e9ecef;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            margin-bottom: 30px;
        }

            .landing-section img {
                width: 50%;
                max-width: 400px;
                border-radius: 15px;
                margin-right: 30px;
            }

        .landing-description {
            max-width: 50%;
        }

            .landing-description h2 {
                margin-bottom: 15px;
                color: #0056b3;
            }

            .landing-description p {
                color: #555;
                font-size: 1.2rem;
            }

        .card1 {
            border: none;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            background-color: #fff;
        }

        .card-header {
            background-color: #0056b3;
            color: white;
            font-size: 1.5rem;
            border-radius: 15px 15px 0 0;
        }

        footer {
            background-color: #007bff;
            color: white;
            padding: 20px 0;
            text-align: center;
            width: 100%;
            position: relative;
        }

        .social-icons {
            margin-top: 10px;
        }

            .social-icons a {
                margin: 0 10px;
                color: #ffd700;
                font-size: 1.8rem;
                transition: color 0.3s;
            }

                .social-icons a:hover {
                    color: white;
                }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/2-removebg-preview.png" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignOut">Sign Out</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">@User.Identity.Name</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="landing-section">
            <img src="~/images/main.png" alt="Landing Image" />
            <div class="landing-description">
                <h2>Welcome to the Online Learning Platform</h2>
                <p>Explore a wide range of courses designed to enhance your skills and knowledge. Join us to embark on an exciting learning journey where you can learn at your own pace and achieve your personal and professional goals.</p>
            </div>
        </div>

        <div class="card1">
          
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p style="color:white">&copy; 2024 - Online_Learning_Platform - <a style="color:white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            <div class="social-icons">
                <a href="#" title="Facebook"><i class="fab fa-facebook-square"></i></a>
                <a href="#" title="Twitter"><i class="fab fa-twitter-square"></i></a>
                <a href="#" title="LinkedIn"><i class="fab fa-linkedin"></i></a>
                <a href="#" title="Instagram"><i class="fab fa-instagram-square"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
