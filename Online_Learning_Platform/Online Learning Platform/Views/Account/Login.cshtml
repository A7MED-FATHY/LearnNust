@model Online_Learning_Platform.ViewModel.LoginUserViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tracks - Online Learning Platform</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
@{
    Layout = "~/Views/Shared/_LayoutAdvanc.cshtml";

    ViewData["Title"] = "Login";
}
    </head>
    <body>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="SaveLogin">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Username Field -->
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group">
                            <label asp-for="Password" class="control-label font-weight-bold"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="RememberMe" />
                                <span asp-validation-for="RememberMe" class="text-danger"></span>
                            <label class="form-check-label font-weight-bold">
                                @Html.DisplayNameFor(model => model.RememberMe)

                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-action="Register">Don't have an account? Create one!</a>
                    </div>
                    <div class="small mt-2">
                        <a asp-controller="Home" asp-action="Index">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
