<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tracks - Online Learning Platform</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    </head>
    <body>

@model Online_Learning_Platform.Models.Track

@{
    ViewData["Title"] = "Edit Track";
}

<h1>Edit Track</h1>

<h4>Track</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit/@Model.TrackId" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="TrackId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"   />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Image:</label>
                <img src="@Url.Content(Model.ImageUrl)" alt="Current Image" style="max-width: 100px;" />
            </div>

            <div class="form-group">
                <label for="imageFile">Upload New Image (optional)</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>  
</html>